.clear {
	content:"";
    display:table;
    clear:both;
}
body {
	font-size:19px;
	line-height:28px;
	font-family: Georgia, Times, serif;
}
h1,h2,h3,h4,h5,h6,
.btn {
	font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
}
p {
	margin:0 0 28px;
}
ul, ol {
	margin-bottom:28px;
}
li {
	font-size:19px;
	line-height:28px;
	margin-bottom:4px;
}
.wrapper {
	margin:60px auto;
	max-width:1170px;
	padding: 0 3% 0 0;
}
header {
	float:left;
	width: 29%;
	*width: 29%;
	position:fixed;
	top:20%;
	left:2%;
}
#branding h1 {
	font-size:36px;
	line-height:42px;
	margin-bottom:8px;
}
#branding a {
	color:#333;
}
#branding a:hover {
	text-decoration:none;
}
ul.social-icons {
	margin:0 0 28px 0;
	min-height:33px;
	height:auto;
	overflow:auto;
}
ul.social-icons li {
	display:inline;
	list-style:none;
	float:left;
	margin:0 4px 4px 0;
}
ul.social-icons li a:hover i {
	text-decoration:none;
	opacity:0.8;
}
#searchform {
}
#content {
	float:right;
	width: 65%;
    *width: 65%;
    padding-right:2%;
}
nav ul {
	margin-left:0;
}
nav ul li {
	list-style:none;
}
.stories {
	font-size:1em;
}
.stories h3 {
	font-size:24px;
	line-height:36px;
	margin-bottom:4px;
}
.stories p {
	margin-bottom: 14px;
}

h1.entry-title {
	font-size:48px;
	line-height:60px;
	margin-bottom:0.5em;
}
.entry-content h3 {
	font-size:28px;
	line-height:36px;
	margin-bottom:28px;
}
.entry-content p.small {
	font-size:0.8em;
}
.entry-content img {
	margin:28px auto;
}
.entry-content img.aligncenter {
	text-align:center;
	clear:both;
	float:none;
}
.entry-content img.alignleft {
	float:left;
	margin-right:20px;
}
.entry-content img.alignleft {
	float:right;
	margin-left: 20px;
}
.embed-container {
    position: relative;
    padding-bottom: 56.25%; /* 16/9 ratio */
    padding-top: 30px; /* IE6 workaround*/
    height: 0;
    overflow: hidden;
    margin-bottom:28px;
}
.embed-container iframe,
.embed-container object,
.embed-container embed {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}
blockquote {
	background-color:#eee;
	border-left: 5px solid #ccc;
	padding:12px 10px 12px 15px;
}
blockquote p {
	font-size:18px;
	line-height:1.5;
	margin:14px 0;
}
.tags {
	margin-left:0;
	background-color:#eee;
	padding:4px 14px 4px 14px;
	-webkit-border-radius: 8px;
	-moz-border-radius: 8px;
	border-radius: 8px;
	height:100%;
	overflow:auto;
	margin-bottom:30px;
}
ul.tags-list {
	margin-left:0;
}
ul.tags-list li {
	display:inline;
	padding:8px 12px;
	margin-right:10px;
	font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
	font-size:15px;
	float:left;
	margin-bottom:10px;
}
p.tags-heading {
	font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
	font-size:15px;
	text-transform:uppercase;
	padding:0;
	margin:0 0 2px 0;
}
ul.tags-list li a {
	color:#fff;
}
.pager {
	font-size: 13px;
}
.pager .previous a {
	margin-bottom:10px;
}
#disqus_thread {
	background-color:#ededed;
	padding:20px 10px;
	border-top: 8px solid #ccc;
	margin-bottom:20px;
}
.CleanContact {
	width:100% !important;
}

