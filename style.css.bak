/* the media queries */

@media screen and (max-width: 480px) {
 .wrapper {
 	margin-top:20px;
 }
 header {
	 clear:both;
	 width:100%;
	 text-align:center;
	 position:relative;
	 top:0;
	 left:0;
	 margin-bottom:20px;
	 border-bottom: #eee 3px solid;
 }
 #branding h1 {
	margin-bottom:4px;
 }
 #branding p {
	 font-size:15px;
	 line-height:21px;
 }
 #menu-primary li {
	 display:inline;
	 margin:0 10px;
 }
 #content {
 	float:none;
	clear:both;
	width:100%;
 }
 h1.entry-title {
	 font-size:36px;
	 line-height:48px;
 }
 .entry-content h3 {
	font-size:24px;
	line-height:32px;
	margin-bottom:28px;
 }
 header input {
	 width:95%;
 }
}


@media screen and (min-width: 481px) and (max-width: 767px) {
 .wrapper {
 	margin-top:20px;
 }
 header {
	 clear:both;
	 width:100%;
	 text-align:center;
	 position:relative;
	 top:0;
	 left:0;
	 margin-bottom:20px;
	 border-bottom: #eee 3px solid;
 }
 #branding h1 {
	 font-size:48px;
 }
 #branding p {
	 font-size:22px;
	 line-height:28px;
 }
 #menu-primary li {
	 display:inline;
	 margin:0 10px;
 }
 #content {
 	float:none;
	clear:both;
	width:100%;
 }
 header input {
	 width:50%;
 }
}

@media screen and (min-width: 768px) and (max-width: 979px) {
 .wrapper {
 	margin-top:20px;
 }
 header {
 	width: 26%;
	*width: 26%;
	top:18%;
 }
 #branding h1 {
 	font-size:32px;
 }
 header input {
	 width:90%;
 }
}

@media screen and (min-width: 980px) and (max-width: 1199px) {
 .wrapper {
 	margin-top:20px;
 }
 header {
	width: 26%;
	*width: 26%;
	top:14%;
	left:3%;
 }
}

@media screen and (min-width: 1200px) {
 header {
	left:4%;
 }
}
@media screen and (min-width: 1600px) {
 header {
	width:25%;
	*width:25%;
	left:8%;
 }
}


